<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        tools:background="@mipmap/mine_bg"
        android:layout_height="match_parent">


    <LinearLayout
            style="@style/MineTableStyle"
            android:gravity="center_vertical|left"
            android:layout_marginTop="33dp">

        <LinearLayout
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/recharge_gold_icon"/>

            <TextView
                    android:layout_marginTop="18dp"
                    android:textSize="25sp"
                    style="@style/BaseTextStyle"
                    android:text="1500"
                    android:textColor="#FFE58C"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="100dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/btn_buy"/>

            <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="12sp"
                    style="@style/BaseTextStyle"
                    android:text="1元 = 1钻石"
                    android:textColor="#82B7FF"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/btn_withdraw"/>

            <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_marginRight="5dp"
                        android:textSize="12sp"
                        style="@style/BaseTextStyle"
                        android:text="我的银行卡"
                        android:textColor="#82B7FF"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/bank_more"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            style="@style/MineTableStyle"
            android:gravity="center_vertical|left"
            android:layout_marginTop="33dp">

        <LinearLayout
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/recharge_money_icon"/>

            <TextView
                    android:layout_marginTop="18dp"
                    android:textSize="25sp"
                    style="@style/BaseTextStyle"
                    android:text="4000"
                    android:textColor="#FFE58C"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="100dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/btn_recharge"/>

            <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="12sp"
                    style="@style/BaseTextStyle"
                    android:text="1钻石 = 2金币"
                    android:textColor="#82B7FF"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>