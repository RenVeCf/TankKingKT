<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_resourse"
            android:layout_width="wrap_content"
            android:src="@mipmap/game_1"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="@id/iv_resourse"
            app:layout_constraintRight_toRightOf="@id/iv_resourse"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_resourse"
            android:text="单局10金币"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:background="#88000000"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:layout_marginBottom="70dp"
            />

</android.support.constraint.ConstraintLayout>